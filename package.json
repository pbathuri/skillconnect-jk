{
  "name": "skillconnect-jk",
  "version": "1.0.0",
  "description": "SkillConnect JK - Outcome-linked skilling credit platform for Jammu & Kashmir",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "cd apps/backend && npm run migration:run",
    "db:seed": "cd apps/backend && npm run seed"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

